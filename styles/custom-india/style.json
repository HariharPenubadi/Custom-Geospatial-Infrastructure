{
  "version": 8,
  "name": "Dark Style",
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "http://localhost:8088/data/india.json"
    },
    "restaurants": {
      "type": "geojson",
      "data": "http://localhost:8088/data/restaurants.geojson"
    }
  },
  "sprite": "http://localhost:8088/sprite/sprite",
  "glyphs": "http://localhost:8088/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#1a1a1a"
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#222"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#333"
      }
    },
    {
      "id": "road_major",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary", "trunk"],
      "paint": {
        "line-color": "#444",
        "line-width": 1.5
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service", "track"],
      "paint": {
        "line-color": "#333",
        "line-width": 1
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#2a2a2a",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "place_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-color": "#000",
        "text-halo-width": 1
      }
    }
  ]
}
